<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
        Increase all *_description columns from VARCHAR(255) to CLOB/TEXT.
        JDL String fields default to VARCHAR(255); rich course/lesson descriptions
        can exceed that limit. Use ${clobType} (clob on H2, clob/TEXT on MySQL).
    -->
    <changeSet id="20260222000001-1" author="jhipster">
        <modifyDataType tableName="discipline" columnName="discipline_description" newDataType="${clobType}"/>
        <modifyDataType tableName="program"    columnName="program_description"    newDataType="${clobType}"/>
        <modifyDataType tableName="course"     columnName="course_description"     newDataType="${clobType}"/>
        <modifyDataType tableName="lesson"     columnName="lesson_description"     newDataType="${clobType}"/>
        <modifyDataType tableName="resource"   columnName="resource_description"   newDataType="${clobType}"/>
    </changeSet>

</databaseChangeLog>
