<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20260216000000-1" author="jhipster">
        <createTable tableName="user_course_enrollment">
            <column name="id" type="bigint" autoIncrement="true" startWith="1500">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_login" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="course_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="enrolled_at" type="${datetimeType}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
            tableName="user_course_enrollment"
            columnNames="user_login, course_id"
            constraintName="ux_user_course_enrollment"/>
    </changeSet>
</databaseChangeLog>
